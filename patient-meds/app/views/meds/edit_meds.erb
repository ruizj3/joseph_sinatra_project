<h2> Edit Medication </h2>

<form method="post" action="/meds/<%=@med.id%>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Name: <input type="text" name="name" value="<%= @med.name %>"></p>
  <p>Price: <input type="integer" name="price" value="<%= @med.price %>"></p>
  <p>Number of Pills: <input type="integer" name="num_pills" value="<%= @med.num_pills %>"></p>
  <input type="submit" value="Submit Changes">
</form>

<form method="post" action="/meds/<%=@med.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="DELETE">
  <input type="submit" value="Delete Medication">
</form>
